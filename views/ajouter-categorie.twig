{% extends "layout.twig" %}

{% block body %}

    <p class="text-center">Ajouter une Categorie !</p>
   
    <form action='' method='POST'>
        
        
    {% if errorForm %}

    {% for error in errorForm %}
    <ul>
    {%if error.title %}
        <li>{{error.title.message}}</li>
    {% endif %}

    {% if error.category %}
        <li>{{error.category.message}}</li>
    {% endif %}

    {% if error.content %}
        <li>{{error.content.message}}</li>
    {% endif %}

    {% if error.image %}
        <li>{{error.image.message}}</li>
    {% endif %}
    </ul>
        
    {% endfor %}
    {% endif %}

        <div class="form-group">
        <label for="">Categorie : </label>
            <input type="text" name="categorie" class="form-control">
        </div>
        
        <div class="form-group">
        <button class='btn btn-success'>Ajouter categorie</button>
        </div>
</form>




{% endblock %}