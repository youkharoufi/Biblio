{% extends "layout.twig" %}


{% block body %}
{% if errorForm %}

    {% for error in errorForm %}
    <ul>
    {%if error.title %}
        <li>{{error.title.message}}</li>
    {% endif %}

    {% if error.category %}
        <li>{{error.category.message}}</li>
    {% endif %}

    {% if error.content %}
        <li>{{error.content.message}}</li>
    {% endif %}

    {% if error.image %}
        <li>{{error.image.message}}</li>
    {% endif %}
    </ul>
        
    {% endfor %}
    {% endif %}

    <p class="text-center">Emprunt</p>

<form action="" method='POST'>


<div class="form-group">
<label for="">Nom de l'emprunteur:</label>
<input type="text" name="nomDeLEmprunteur" class="form-control">
</div>

<div class="form-group">
<label for="">Numero de  telephone de l'emprunteur:</label>
<input type="Number" name="numero" class="form-control">
</div>

<div class="form-group">
<label for="">Nombre d'exemplaires empruntes:</label>
<input type="Number" name="nombreDExemplaires" class="form-control">
</div>

<div class="form-group">
<label for="">Adresse mail de l'emprunteur:</label>
<input type="email" name="email" class="form-control">
</div>

<div class="form-group">
<button class='btn btn-success'>Faire emprunter</button>
</div>

</form>


{% endblock %}